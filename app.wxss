page {
  min-height: 100%;
  background: #F1FAF8;
}

.flex {
  display: flex;
  align-items: center;
}

.bwn {
  justify-content: space-between;
}

.around {
  justify-content: space-around;
}

.center {
  justify-content: center;
}

image,
input,
textarea {
  display: block;
}

.inputPl {
  color: #A7B4B1;
}

.noClick {
  pointer-events: none;
}

view,
navigator {
  box-sizing: border-box;
  word-break: break-all;
}

.hidden {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.hidden2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.save {
  height: 88rpx;
  background: linear-gradient(90deg, #21D79B, #04ACB9);
  border-radius: 44rpx;
  font-size: 32rpx;
  text-align: center;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 88rpx;
}
.bottomFix{
  width:100%;
  position: fixed;
  bottom:0;
  padding:30rpx 0;
  background: #fff;
  z-index: 10;
}