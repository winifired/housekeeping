.uploadImg {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.uploadImg>view {
  width: 220rpx;
  height: 220rpx;
  background: #F5F5F5;
  border-radius: 10rpx;
  margin-bottom:15rpx;
  position: relative;
}

.uploadImg>view:not(:nth-child(3n)) {
  margin-right:15rpx;
}
.img{
  width: 100%;
  height: 100%;
  z-index:3;
}
.close{
  width:40rpx;
  height: 40rpx;
  position: absolute;
  right: 12rpx;
  top:13rpx;
  z-index:5;
}
.upLoad>image{
  width:220rpx;
  height: 220rpx;
}