@import "../add/add.wxss";

.evaContT,
.evaCont>textarea {
  font-size: 30rpx;
  color: #011F18;
}

.evaContT {
  padding: 28rpx 0 0;
}

.evaCont>textarea {
  width: 100%;
  height: 200rpx;
  margin: 34rpx 0;
}

page {
  background: #fff;
}

.add {
  padding: 0 30rpx 0 !important;
}

.confirm {
  width: 616rpx;
}

button[type=primary] {
  margin: 120rpx auto 0 !important;
}
.workerTitle{
  position: fixed;
  z-index:30;
  height: 100rpx;
  width:100%;
  background: #fff;
  padding:0 40rpx;
  border-bottom:1px solid rgb(246,246,246);
}
.workerTitle>view{
  font-size: 34rpx;
}
.workerTitle>view:nth-child(1){
  color:rgb(127,127,93);
}
.workerTitle>view:nth-child(2){
  color:rgb(7,193,96);
}
.worker {
  padding:140rpx 0 30rpx 30rpx;
}

.worker>view {
  min-width: 109rpx;
  height: 61rpx;
  background: #FFFFFF;
  border: 1px solid #B4C7C2;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  line-height: 61rpx;
  margin: 0 20rpx 20rpx 0;
  display: inline-block;
}

.activeWorker {
  color: #35BB9A !important;
  border: 1px solid #35BB9A !important;
}