.item {
  width: 706rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 23rpx;
  margin: 0 auto 22rpx;
}
.time .titel .cycle {
  width: 10rpx;
  height: 10rpx;
  background: #FF0000;
  border-radius: 50%;
  margin-right: 12rpx;
}
.time .titel > view:nth-child(2) {
  font-size: 32rpx;
  font-weight: 400;
  color: #011F18;
}
.time > view:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: #415D56;
}
.content {
  font-size: 28rpx;
  margin: 27rpx 0 0;
  color: #415D56;
  line-height: 48rpx;
  max-height: 84rpx;
}
.message {
  padding: 0 0 60rpx;
}
.img_rich {
  width: 100% !important;
  height: auto;
  display: block;
  margin: 20rpx 0;
}
.richText col {
  width: 100% !important;
}
.table_rich {
  width: 100% !important;
}
